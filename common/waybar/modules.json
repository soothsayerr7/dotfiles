{
  "custom/appmenu": {
    "format": "      ",
    "tooltip-format": "App menu",
    "on-click": "sleep 0.1; fuzzel"
  },

  "niri/workspaces": {
    "on-click": "activate"
  },

  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 18,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": ["kitty"]
  },

  "niri/window": {
    "format": "{}",
    "separate-outputs": true
  },

  "custom/exit": {
    "format": " 󰐥 ",
    "on-click": "~/.config/waybar/scripts/power-menu.sh",
    "on-click-right": "~/.config/waybar/scripts/waybar-restart.sh",
    "tooltip-format": "Power Menu"
  },

  "tray": {
    "icon-size": 20,
    "spacing": 10
  },

  "clock": {
    "format": "{:%H:%M}",
    "tooltip-format": "{:%Y-%m-%d}"
  },

  "battery": {
    "format": "{icon} {capacity}%",
    "format-charging": "  {capacity}%",
    "format-plugged": "  {capacity}%",
    "format-icons": [" ", " ", " ", " ", " "],
    "tooltip": false
  },

  "wireplumber": {
    "format": "{icon}  {volume}%",
    "format-muted": " {format_source}",
    "format-bluetooth": "{volume}% {icon} {format_source}",
    "format-bluetooth-muted": " {icon} {format_source}",
    "format-source": "{volume}% ",
    "format-source-muted": "",
    "format-icons": ["󰕿", "󰖀", "󰕾"],
    "scroll-step": 2,
    "tooltip": false
  },

  "bluetooth": {
    "format": "",
    "format-off": "",
    "format-disabled": "",
    "format-no-controller": "",
    "interval": 30
  },

  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": [
      "", "", "", "", "",
      "", "", "", "", "",
      "", "", "", "", ""
    ],
    "scroll-step": 5,
    "tooltip": false
  }
}
